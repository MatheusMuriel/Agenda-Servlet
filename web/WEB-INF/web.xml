<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>br.edu.unifil.servlet.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/a</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>vincular</servlet-name>
        <servlet-class>br.edu.unifil.servlet.VinculadorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>vincular</servlet-name>
        <url-pattern>/vincular</url-pattern>
    </servlet-mapping>



    <!-- Contatos -->
    <servlet>
        <servlet-name>novo-contato</servlet-name>
        <servlet-class>br.edu.unifil.servlet.ContatoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>novo-contato</servlet-name>
        <url-pattern>/contato/novo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lista-contatos</servlet-name>
        <servlet-class>br.edu.unifil.servlet.ContatoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>lista-contatos</servlet-name>
        <url-pattern>/contato/listar</url-pattern>
    </servlet-mapping>

    <!-- Telefones -->
    <servlet>
        <servlet-name>novo-telefone</servlet-name>
        <servlet-class>br.edu.unifil.servlet.TelefoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>novo-telefone</servlet-name>
        <url-pattern>/telefone/novo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lista-telefone</servlet-name>
        <servlet-class>br.edu.unifil.servlet.TelefoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>lista-telefone</servlet-name>
        <url-pattern>/telefone/listar</url-pattern>
    </servlet-mapping>


    <!-- Grupos -->
    <servlet>
        <servlet-name>novo-grupo</servlet-name>
        <servlet-class>br.edu.unifil.servlet.GrupoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>novo-grupo</servlet-name>
        <url-pattern>/grupo/novo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lista-grupo</servlet-name>
        <servlet-class>br.edu.unifil.servlet.GrupoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>lista-grupo</servlet-name>
        <url-pattern>/grupo/listar</url-pattern>
    </servlet-mapping>

</web-app>